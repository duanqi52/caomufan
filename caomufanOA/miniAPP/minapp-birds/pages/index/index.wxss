/**index.wxss**/
@import '../../lib/style/icon-sousuo.wxss';



.ShowBody{
padding: 0 44rpx;
width: 662rpx;
}


/* 搜索样式 */
.SearchBox{

padding: 42rpx 0 12rpx 0;
}

.SearchBox .SearchLogo{
position: relative;

}
.SearchBox .SearchLogo .shareBtn{
	position: absolute;
	top:-20rpx;
	right: 110rpx;
	width: 89rpx;
	padding: 0;
	border: 0;
	background: none;
}
.SearchBox .SearchLogo .shareBtn::after{
  border: none
}
.SearchBox .SearchLogo .shareBtn image{
	width: 89rpx;
	height: 87rpx;
	
}
.SearchBox .SearchLogo image{
  width: 100%;
  height: 115rpx;
  vertical-align:middle;
}


.SearchBox .SearchBtnBox {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 34rpx;
  
  color: #888888;
}
.SearchBox .SearchBtnBox .SearchBtn{
  background: #ffffff;
  padding: 0 48rpx;
  border-radius: 45rpx
}

.SearchBox .SearchBtnBox .SearchBtn icon{
  margin-right: 9rpx
}


/* 跳转页面按钮样式 */
.ShowBtnBox{
  margin: 27rpx auto;
  width: 100%;
  background-size:100%;
  background-repeat:no-repeat;
  position:relative;
  
}

.ShowBtnBox .ShowBtnImg{
  height: 260rpx;
  width: 100%;
}

.ShowBtnBox .ShowBtnImg image{
  width: 100%;
  height: 100%;
}

.ShowBtnBox .ShowBtnText{
  
  position: absolute;
  top: 0;
  padding: 0rpx 47rpx 0 47rpx;
  /* line-height: 200rpx; */
  color: #fff;
}

.ShowBtnBox .ShowBtnText .ShowTitle{
  padding-top:35rpx;
  font-size: 41rpx;
  letter-spacing:7rpx;
}

.ShowBtnBox .ShowBtnText .ShowList{
  margin: 8rpx 0 0 0;
  font-size:28rpx;
  width: 160rpx;
  letter-spacing:4rpx;
  line-height: 36rpx;
  
}

