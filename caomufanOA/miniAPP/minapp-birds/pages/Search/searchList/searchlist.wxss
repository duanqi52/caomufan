/* 搜索框样式 */
.SearchBox{
width: 660rpx;
margin: 0rpx auto 0;
padding: 42rpx 0 40rpx 0;
}
.SearchLogo{

}
.SearchLogo image{
  width: 100%;
  height: 115rpx;
  vertical-align:middle;
}

.SearchInputBox{
  height: 90rpx;
  line-height: 90rpx;
  background: #fff;
  border:1px solid #dcdcdc;
  border-radius: 45rpx;
  display: flex;
  position: relative;
  overflow: hidden;
}
.SearchInputBox .searchIcon{
width: 80rpx;
text-align: right;
}
.SearchInputBox .searchIcon icon{
font-size: 34rpx;
color: #888888;
}

.SearchInputBox .searchInput{
  width: 380rpx;
  padding: 0 10rpx;
}
.SearchInputBox .searchInput input{
  height: 100%;
}

.SearchInputBox .NullIcon{
  font-size: 34rpx;
}
.SearchInputBox .NullIcon button{
  background: #fff;
  padding: 0;
  border: none;

}
.SearchInputBox .NullIcon button::after{
  border: none
}
.SearchInputBox .searchBtn{
  position: absolute;
  right: -2rpx;
  top: -0rpx;
}
.SearchInputBox .searchBtn .searchBtnShow{
  background: #74b113;
  width: 140rpx;
  text-align: center;
  height: 92rpx;
  border-radius: 46rpx;
  line-height: 92rpx;
  color: #fff;
  font-size: 34rpx;
}
.SearchInputBox .searchBtn .searchBtnShow button::after{
  border: none
}











