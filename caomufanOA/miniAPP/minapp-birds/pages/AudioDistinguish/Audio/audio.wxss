.rippleAnimation1{
  animation: ripple 2.1s infinite linear;
  animation-delay:2.1s;
} 
.rippleAnimation2{
  animation: ripple 2.1s infinite linear;
  animation-delay:1.4s;
} 
.rippleAnimation3{
  animation: ripple 2.1s infinite linear;
  animation-delay:0.7s;
} 
.rippleAnimation4{
  animation: ripple 2.1s infinite linear;
  
}

 
@keyframes ripple{
  from{
    opacity: 0;
    transform: scale(2,2);
	/* height: 300rpx; */
  }
  to{
    opacity: 0.4;
    transform: scale(1,1);
	/* height: 900rpx; */
  }
}
.startBtn .voiceTime{
	position: relative;
	top: 25rpx;
	color: #fff;
	text-align: center;
	
	}
/* 声纹动画 */
.startBtn .voiceing{
	position: relative;
	top: 40rpx;
	
	}
.voiceing .colItem{
	width: 2px;
	  height:180rpx;
	  min-height: 1rpx;
	  background-color: #fff;
	  position: absolute;
	  top: 110rpx;
	
}

/* 上传识别 */
.UploadAudio{
	position: absolute;
	left: 50%;
	width: 320rpx;
	margin-left: -160rpx;
	bottom: 40rpx;
}

.UploadAudio button{
	background: #ff9919;
	color: #fff;
	width: 320rpx;
	height: 90rpx;
}
.AgainAudioBox{
	position: absolute;
	bottom:200rpx;
	z-index: 66;
	width: 100%;
	}

.AgainAudio{
	
	display: flex;	
	justify-content: center;
	align-items: center;	
	
	text-align: center;
	color: #fff;
	text-decoration: underline;
	font-size: 34rpx;
	}
	.PlayNow{
		margin-left: 50rpx;
	}

/* 底部 */
.Bottom{
	position: absolute;
	bottom: 0;
	
}
.Bottom image {
	width: 750rpx;
	height: 260rpx;
}
