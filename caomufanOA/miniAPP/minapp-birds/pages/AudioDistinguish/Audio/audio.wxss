.Body{
	background: #74b113;
	position: relative;
	
}

/* 录音按钮 */
.StartBtnBox{
	
	position: relative;
	display: flex;
	  align-items: center;
	  justify-content: center;
}
.BtnBox{
	width: 380rpx;
	height:380rpx;
	position: relative;
}
.startBtn{
	position: absolute;
	top: 0;
	left: 50%;
	margin-left: -185rpx;
	width: 380rpx;
	height:380rpx;
	border-radius: 50%;
	background: #a0ca5e;
	z-index: 9999;
	overflow: hidden;
}
.startBtn .StartImg{
		margin: 0 auto;
		text-align: center;
		height: 380rpx;
		display:flex;
		justify-content: center;
		align-items: center;
		
}
.startBtn  .StartImg image{
		width: 200rpx;
		height: 200rpx;
}

.startBtn .StartTxt{
	position: absolute;
	top: 300rpx;
	height: 100rpx;
	width: 200rpx;
	text-align: center;
	color: #fff;
	font-size: 28rpx;
	left: 50%;
	margin-left: -100rpx;
}

.ripple{
	position: absolute;
	top: 0;
	margin-left: -185rpx;
	left:50%;
	width: 380rpx;
	height:380rpx;
	border-radius: 50%;
	z-index: 10;
	/* border: 1px solid #ddd; */
	/* background: #ffffff50; */
	background:rgba(255, 255, 255, 0.5);
}

 .ripple11{
	transform: scale(1.25,1.25);
	opacity: 0.4;
}
.ripple22{
	transform: scale(1.5,1.5);
	opacity: 0.4;
} 
