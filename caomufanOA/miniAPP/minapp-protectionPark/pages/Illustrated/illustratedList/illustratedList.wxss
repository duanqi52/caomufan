/* pages/Illustrated/illustratedList/illustratedList.wxss */
@import '../../../lib/icon/icon-qingkong.wxss';
page{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.Body{
  padding: 20rpx 0 30rpx 0;
   overflow: hidden;
    overflow-y: scroll;
}


/* 搜索输入框 */
.searchBox{
	
	display: flex;
	flex-direction: column;
	
}
.SearchBox form{
	/* padding: 20rpx 0rpx; */
	
	background:#f1f1f1 ;
}
.SearchBox .SearchInputBox{
	background: #fff;
	display: flex;
	margin: 20rpx auto;
	width: 700rpx;
	border: 1rpx solid #74b113 ;
	height: 80rpx;
	border-radius: 15rpx;
	line-height: 80rpx;
	border-radius: 20rpx;
	overflow: hidden;
}
.SearchBox .SearchInputBox .searchInput{
	padding: 0 30rpx;
}
.SearchBox .SearchInputBox .searchInput input{
	width: 520rpx;
	height: 80rpx;
}

.SearchBox .SearchInputBox .searchBtn{
	width: 120rpx;
}
.SearchBox .SearchInputBox .searchBtn .searchBtnShow{
	width: 100%;
	text-align: center;
	background: #74b113;
	color: #fff;
	font-size: 28rpx;
}

/* 历史搜索 */
.HistooryListBox{
  width: 100%;
  background: #fff;
}
.HistoryTitle{
  margin:0 25rpx;
   display: flex;
   justify-content:space-between;
   color: #888888;
    border-bottom: 1rpx solid #dcdcdc;
  letter-spacing:2.8rpx;
   font-size: 28rpx;
  line-height: 60rpx;
}
.HistoryTitle text{
  padding:0 18rpx;
}
.HistoryTitleBtn{
 padding:0 18rpx;
 color: #74b113;
}

.HistoryList {
  
   margin-top: 0rpx;
   padding: 0 21rpx;
   min-height: 125rpx;
   overflow: hidden;
   
}
.HistoryList .HistoryBox{
  display: flex;
  flex-wrap: wrap ;
}
.HistoryList .HistoryIteamBox{
  
    margin-left:22rpx ;
}

.HistoryList  .HistoryIteamBox .HistoryIteam{
  padding: 20rpx;
  letter-spacing:6rpx;
  background: #f1f1f1;
  color: #313233;
  font-size: 34rpx;
  border-radius: 5rpx;
  margin: 10rpx 0;  
}



/* 展示列表 */
.ListBoX{
  
