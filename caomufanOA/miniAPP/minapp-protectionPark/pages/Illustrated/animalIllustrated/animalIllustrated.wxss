/* pages/Illustrated/animalIllustrated/animalIllustrated.wxss */


@import '../../../lib/icon/icon-sousuo.wxss';

/* 搜索框样式 */
.SearchBox{
  height: 115rpx; 
  padding: 20rpx 0 0 0;
}


.SearchBox .SearchBtnBox {

  height: 90rpx;
  line-height: 90rpx;
  font-size: 34rpx;
  margin: 0rpx 45rpx 0;
  /*  */
  color: #888888;
}

.SearchBox .SearchBtnBox .SearchBtn{
  background: #ffffff;
  padding: 0 48rpx;
  border: 1rpx solid #ddd;
  border-radius: 20rpx;
  /* margin: 40rpx 0 0 0; */
}

.SearchBox .SearchBtnBox .SearchBtn icon{
  margin-right: 9rpx
}

/* 纲列表 */
.classBox{
	height: 80rpx;
}
.classScroll{
	white-space: nowrap;
	width:96%;
	padding:0 2%;
	 height:80rpx
}
.classItem{
	display: inline-block;
	line-height: 76rpx;
	padding: 0 30rpx;
	margin-right: 10rpx;
	color: #888888;
	font-size: 28rpx;

}
.classItem.active{
	color: #9ac754;
	border-bottom: 4rpx solid #9ac754 ;
}


.ListBox{
	display: flex;
}

/* 列表左边 */
.ListLeft{
	width: 150rpx;
}
.ListLeft .LeftBtn{
	width: 145rpx;
	margin-left: 6rpx;
	height: 75rpx;
	line-height: 75rpx;
	text-align: center;
	font-size: 28rpx;
	overflow: hidden;
	  white-space: nowrap;
	  text-overflow: ellipsis;
	
}

.ListLeft .LeftBtn.active{
	background: #e9e9e9;
	color: #74b113;
	border-top-left-radius: 10rpx;
	border-bottom-left-radius: 10rpx;
	box-shadow: -10rpx 0 10rpx #ddd;
}

.ListLeft ::-webkit-scrollbar{
 
display: none;
}


/* 列表右边 */
.ListRight{
	width: 600rpx;
	background: #e9e9e9;
	/* height: 100%; */
}
.ListRight .RightItem{
	width: 540rpx;
	margin:0 auto 20rpx;
	background: #fff;
}
.ListRight .RightItem:first-child{
	margin:20rpx auto 20rpx; 
}


.ListRight .RightItem .RightItemTitle{
	height: 77rpx;
	line-height: 77rpx;
	padding: 0 20rpx;
	font-size: 28rpx;
	color: #888888;
}

.ListRight .RightItem .RightItemShow{
	display: flex;
	flex-flow:row wrap;
	padding: 0 0rpx 0 20rpx;
}
.ListRight .RightItem .RightShowBox{
	width: 240rpx;
	margin-right: 20rpx;
	margin-top:10rpx ;
}
.ListRight .RightItem .RightShowImg{
	width: 100%;
	height: 160rpx;
}
.ListRight .RightItem .RightShowImg image{
	width: 100%;
	height: 160rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.2);
}

.ListRight .RightItem .RightShowname{
	text-align: center;
	height: 70rpx;
	line-height: 70rpx;
	font-size: 28rpx;
	color: #313233;
	overflow: hidden;
	  white-space: nowrap;
	  text-overflow: ellipsis;
}

.ListRight .RightItem .RightItemMore{
	margin-top:10rpx ;
	border-top: 1px solid #ddd;
	height: 80rpx;
	line-height: 80rpx;
	color:#74b113 ;
	text-align: center;
	width: 100%;
	font-size: 28rpx;
}


  .noListShow{
	  color: #c2c1c1;
	  font-size:32rpx;
	  text-align: center;
	  padding-top: 200rpx;
  }  



::-webkit-scrollbar{
 
display: none;
}